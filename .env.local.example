# Copy this file to .env.local and fill in the values

# PostgreSQL — pooler URL (runtime)
DATABASE_URL="postgresql://USER:PASSWORD@HOST-pooler.neon.tech/neondb?sslmode=require"

# PostgreSQL — direct URL (migrations)
DATABASE_URL_UNPOOLED="postgresql://USER:PASSWORD@HOST.neon.tech/neondb?sslmode=require"

# NextAuth — generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Resend — get your API key at resend.com
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxx"

# Cron job protection — any random string, set same value in Vercel env vars
CRON_SECRET="your-cron-secret-here"

# Google OAuth — create at console.cloud.google.com → APIs & Services → Credentials
# Enable the Gmail API, create an OAuth 2.0 Client ID (Web application)
# Add authorised redirect URI: http://localhost:3000/api/gmail/callback
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Anthropic — get your API key at console.anthropic.com
ANTHROPIC_API_KEY="sk-ant-xxxxxxxxxxxxxxxxxxxx"
